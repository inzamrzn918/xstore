{
  "name": "desktop-client",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder -w"
  },
  "build": {
    "appId": "com.xstore.desktop",
    "productName": "XStore Desktop",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "busboy": "^1.6.0",
    "canvas": "^3.2.0",
    "crypto-js": "^4.2.0",
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}